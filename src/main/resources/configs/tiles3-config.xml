<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <definition name="mainDef" template="/WEB-INF/pages/layouts/mainTemplate.jsp">
        <put-attribute name="header" value="/WEB-INF/pages/layouts/main/header.jsp" />
        <put-attribute name="body" value="/WEB-INF/pages/layouts/main/body.jsp" />
        <put-attribute name="footer" value="/WEB-INF/pages/layouts/main/footer.jsp" />
    </definition>

    <definition name="main/*" extends="mainDef">
        <put-attribute name="body" value="/WEB-INF/pages/views/main/{1}.jsp" />
    </definition>

  <!-- admin -->
  <definition name="adminDef" template="/WEB-INF/pages/layouts/admin/adminTemp.jsp">
    <put-attribute name="header" value="/WEB-INF/pages/layouts/admin/header.jsp" />
    <put-attribute name="left" value="/WEB-INF/pages/layouts/admin/left.jsp" />
    <put-attribute name="body" value="/WEB-INF/pages/layouts/admin/body.jsp" />
  </definition>
  <definition name="admin/*/*" extends="adminDef">
    <put-attribute name="body" value="/WEB-INF/pages/views/admin/{1}/{2}.jsp" />
  </definition>
  <definition name="admin/*/*/*" extends="adminDef">
    <put-attribute name="body" value="/WEB-INF/pages/views/admin/{1}/{2}/{3}.jsp" />
  </definition>

  <definition name="loginDef" template="/WEB-INF/pages/layouts/admin/loginTemp.jsp">
    <put-attribute name="body" value="/WEB-INF/pages/layouts/admin/body.jsp" />
  </definition>
  <definition name="admin/login" extends="loginDef">
    <put-attribute name="body" value="/WEB-INF/pages/views/admin/login.jsp" />
  </definition>

</tiles-definitions>